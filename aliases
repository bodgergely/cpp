alias t='clang-tidy -header-filter=.* ./cpp/main.cpp -- -DDEBUG -std=c++17 -Wall -Wextra -Weffc++ -Werror -Wpedantic -Wshadow -Wconversion'
alias format='clang-format.exe -i ./cpp/*.cpp ./cpp/*.h'
alias b='format; ./build.sh'
alias run='$PWD/cpp/main.exe'
alias r='b && run'
alias e='vim ./cpp/main.cpp'

alias clang-tidy-flags="clang-tidy --list-checks -checks='*'"
